{
  "name": "dsd-ui",
  "version": "1.0.1",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "npm run prettier && npm run eslint && npm run vuelint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix && npm run vuelint:fix",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "vuelint": "vue-cli-service lint",
    "vuelint:fix": "vue-cli-service lint --fix",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "src/background.js",
  "dependencies": {
    "codemirror": "^5.65.9",
    "core-js": "^3.26.1",
    "custom-electron-titlebar": "^4.1.3",
    "draggabilly": "^3.0.0",
    "electron-store": "^7.0.3",
    "konva": "^8.3.14",
    "register-service-worker": "^1.7.2",
    "vue": "^2.7.14",
    "vue-class-component": "^7.2.6",
    "vue-konva": "^2.1.7",
    "vue-property-decorator": "^9.1.2",
    "vue-resize-split-pane": "^0.1.5",
    "vue-router": "^3.6.5",
    "vue-tabs-chrome": "^0.10.0",
    "vuedraggable": "^2.24.3",
    "vuetify": "^2.6.12",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-pwa": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "@vue/cli-plugin-typescript": "^5.0.8",
    "@vue/cli-plugin-vuex": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-typescript": "^11.0.2",
    "electron": "^21.3.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.27.0",
    "eslint-plugin-vue": "^9.7.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "node-sass": "^8.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "ts-loader": "^8.4.0",
    "typescript": "^4.9.3",
    "vue-cli-plugin-electron-builder": "^2.0.0",
    "vue-cli-plugin-pug": "^2.0.0",
    "vue-cli-plugin-vuetify": "^2.5.8",
    "vue-template-compiler": "^2.7.14",
    "vuetify-loader": "^1.9.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/ban-ts-ignore": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "vue/valid-v-on": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
